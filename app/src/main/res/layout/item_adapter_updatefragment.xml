<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView_updateFragment_show"
        android:layout_marginRight="5dp"
        android:layout_width="50dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/textView_updateFragment_titles"
        android:layout_toRightOf="@id/simpleDraweeView_updateFragment_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView_updateFragment_author"
        android:layout_toRightOf="@id/simpleDraweeView_updateFragment_show"
        android:layout_below="@id/textView_updateFragment_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_updateFragment_type"
        android:layout_toRightOf="@id/simpleDraweeView_updateFragment_show"
        android:layout_below="@id/textView_updateFragment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView_updateFragment_newest"
        android:layout_toRightOf="@id/simpleDraweeView_updateFragment_show"
        android:layout_below="@id/textView_updateFragment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@mipmap/list_icon_right_s"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</RelativeLayout>